<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/title_layout"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/risk_tip"
        android:textColor="#142A3B"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:textColor="#142A3B"
        android:padding="@dimen/dp_15"
        android:text="@string/hardware_import_tip"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="@dimen/dp_20"
        android:textSize="@dimen/sp_14" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/circle_checkbox"
            android:button="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/checkbox"
            android:layout_marginStart="@dimen/dp_10"
            android:singleLine="true"
            android:text="@string/iknow_risk"
            android:textColor="#546370"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>

    <Button
        android:id="@+id/reset_device"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/btn_enable_selector_red"
        android:enabled="false"
        android:text="@string/restore_factory"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14"/>
</LinearLayout>