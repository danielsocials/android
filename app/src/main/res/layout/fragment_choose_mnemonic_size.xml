<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/promote_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/copy_mnemonics"
        android:textColor="#142A3B"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/promote"
        app:layout_constraintTop_toBottomOf="@id/promote_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:text="@string/mnemonic_size_select_promote_12"
        android:textColor="#142A3B"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ready_go"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_gravity="end"
        android:src="@drawable/hand_write" />


    <Button
        android:id="@+id/ready_go"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/choose"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/btn_enable_selector"
        android:text="@string/ready_go"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/green_bacj"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_15"
        android:text="@string/mnemonic_word_12_crete_promote"
        android:textColor="#00B812"
        android:textSize="@dimen/sp_14" />

</androidx.constraintlayout.widget.ConstraintLayout>