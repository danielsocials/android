<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:keepScreenOn="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/promote_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/complete_hand_write"
        android:textColor="#142A3B"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/promote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/promote_1"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:text="@string/copy_mnemonic_12"
        android:textSize="@dimen/sp_14"
        android:textColor="#142A3B" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/promote"
        android:src="@drawable/word"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_69"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ready_go"
        android:text="@string/copy_mnemonic_promote"
        android:textSize="@dimen/sp_14"
        android:textColor="#546370"
        android:drawablePadding="6dp"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginEnd="@dimen/dp_15"
        app:drawableStartCompat="@drawable/md_style_quote" />

    <Button
        android:id="@+id/ready_go"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/btn_enable_selector"
        android:text="@string/copy_it"
        android:enabled="false"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/dp_42"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_20"
        android:layout_gravity="center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>