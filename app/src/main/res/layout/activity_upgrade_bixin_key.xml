<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_bk_ddake"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    tools:context=".activities.settings.UpgradeBixinKEYActivity">

    <RelativeLayout
        android:id="@+id/snkdfnksjndkjsd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"

            android:src="@drawable/back" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tet_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/snkdfnksjndkjsd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/fit_key_warning"
        android:textColor="@color/text_color"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/imgdhksjks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tet_test"
        android:src="@drawable/touch_with_hardware" />

    <ProgressBar
        android:id="@+id/progressUpgrade"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_72"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar_bg">

    </ProgressBar>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tetUpgradeTest"
            android:layout_width="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/tetUpgradeNum"
            android:layout_marginStart="@dimen/dp_2"
            android:layout_width="wrap_content"
            android:layout_marginBottom="38dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/button_bk"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


</RelativeLayout>