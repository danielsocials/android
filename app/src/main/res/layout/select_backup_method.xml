<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:background="@drawable/white_tuo_big"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recovery_from_local_backup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:gravity="center"
            android:text="@string/has_been_recovery"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_hight"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/recovery_from_key_lite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:gravity="center"
            android:text="@string/from_key_lite"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_15"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
