<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="@string/receive"
            android:textColor="@color/text"
            android:textSize="@dimen/text_size" />

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bk_page">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/RelativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:outlineSpotShadowColor="@color/shadow_color"
                    app:cardCornerRadius="@dimen/dp_8"
                    app:cardElevation="@dimen/dp_8"
                    tools:ignore="UnusedAttribute">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:paddingStart="@dimen/dp_16"
                            android:paddingEnd="@dimen/dp_16"
                            android:text="@string/receive"
                            android:textColor="@color/text"
                            android:textSize="@dimen/big_text_size" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/text_margin"
                            android:layout_marginTop="@dimen/corner_radius"
                            android:layout_marginEnd="@dimen/dp_16"
                            android:drawableStart="@drawable/attention"
                            android:drawablePadding="@dimen/corner_radius"
                            android:text="@string/attention"
                            android:textColor="@color/text_red"
                            android:textSize="@dimen/sp_12" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/img_copy"
                            android:drawablePadding="@dimen/dp_10"
                            android:paddingStart="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:paddingEnd="@dimen/dp_20"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_13"
                            tools:text="lnbcdfd4fdsk4j5gb5...h6jd0sjsadrrfgg55678hhhddddejekejkejkejek3ddkddd" />

                        <TextView
                            android:id="@+id/text_change_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_30"
                            android:gravity="center"
                            android:text="@string/change_address"
                            android:textColor="@color/button_bk"
                            android:textSize="@dimen/text_size"
                            android:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/copy_and_check"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_21"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_30"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">


                            <TextView
                                android:id="@+id/text_check_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center|end"
                                android:paddingEnd="@dimen/dp_59"
                                android:text="@string/check_address"
                                android:textColor="@color/button_bk"
                                android:textSize="@dimen/text_size"
                                tools:ignore="RelativeOverlap,RtlSymmetry" />

                            <View
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="@dimen/dp_12"
                                android:background="@color/line_color" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingStart="@dimen/dp_59"
                                android:text="@string/change_address"
                                android:textColor="@color/button_bk"
                                android:textSize="@dimen/text_size"
                                tools:ignore="RtlSymmetry" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/RelativeLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_40"
                android:background="@drawable/button_bk"
                android:text="@string/share"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/text_receive_tip"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@color/button_bk_disableok"
                android:gravity="center"
                android:text="@string/receive_tip"
                android:textColor="@color/button_bk_ddake"
                android:textSize="@dimen/sp_13"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>