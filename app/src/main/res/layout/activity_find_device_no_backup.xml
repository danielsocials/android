<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/active_no_backup"
        android:textColor="#142A3B"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/add_new_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_20"
        android:text="@string/add_new_wallet"
        android:textColor="#142A3B"
        android:textSize="@dimen/sp_16"
        app:drawableEndCompat="@drawable/right_arrow_small"
        app:drawableStartCompat="@mipmap/new_device" />

    <TextView
        android:id="@+id/add_new_wallet_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/add_new_wallet_hide"
        android:textColor="#9FA6AD"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/recovery_used_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_20"
        android:text="@string/recovery_used_wallet"
        android:textColor="#142A3B"
        android:textSize="@dimen/sp_16"
        app:drawableEndCompat="@drawable/right_arrow_small"
        app:drawableStartCompat="@mipmap/recover_device" />

    <TextView
        android:id="@+id/recovery_used_wallet_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/recovery_used_wallet_hide"
        android:textColor="@color/text_six"
        android:textSize="@dimen/sp_12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@color/line_color" />


