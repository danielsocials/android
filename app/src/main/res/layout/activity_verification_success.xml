<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/button_bk_ddake"
    tools:context=".activities.settings.VerificationSuccessActivity">

    <RelativeLayout
        android:id="@+id/snkdfnksjndkjsd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"

            android:padding="@dimen/dp_8"
            android:src="@drawable/back" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@+id/snkdfnksjndkjsd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:src="@drawable/tongguo" />

    <TextView
        android:id="@+id/testStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgStatus"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:text="@string/verifying_pass"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/test_last_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testStatus"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/testContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_last_time"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:textColor="@color/graytext_color"
        android:textSize="@dimen/sp_13"
        android:text="@string/verifying_firmware" />

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/button_bk"
        android:text="@string/finish"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>