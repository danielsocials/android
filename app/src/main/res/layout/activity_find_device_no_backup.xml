    <TextView
        android:id="@+id/multi_sig_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_20"
        android:text="@string/multi_sig_wallet"
        android:textColor="#142A3B"
        android:textSize="@dimen/sp_16"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/right_arrow_small"
        app:drawableStartCompat="@mipmap/multi_sig" />

    <TextView
        android:id="@+id/multi_sig_wallet_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/multi_sig_wallet_hide"
        android:textColor="#9FA6AD"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="@dimen/dp_20"
            android:layout_height="1dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#F1F1F1" />

        <View
            android:layout_width="20dp"
            android:layout_height="1dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_18"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:cardBackgroundColor="#FFF5D6"
        app:cardCornerRadius="@dimen/dp_15">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dp_15"
            android:paddingVertical="@dimen/dp_10"
            android:paddingStart="@dimen/dp_25"
            android:paddingEnd="17dp"
            android:text="@string/create_multisig_warning"
            android:textColor="#FFB000"
            android:textSize="@dimen/sp_12"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/warning" />
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white" />


</LinearLayout>
